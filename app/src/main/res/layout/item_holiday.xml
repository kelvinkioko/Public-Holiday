<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:paddingHorizontal="24dp">

    <TextView
        android:id="@+id/dayOfMonth"
        style="@style/HeadlineTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/monthName"
        tools:text="24" />

    <TextView
        android:id="@+id/monthName"
        style="@style/TitleTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayOfMonth"
        tools:text="FEB" />

    <TextView
        android:id="@+id/holidayName"
        style="@style/MainTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:includeFontPadding="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dayOfMonth"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Feast of Saint Agatha" />

    <TextView
        android:id="@+id/holidayLocalName"
        style="@style/MainTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:includeFontPadding="false"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dayOfMonth"
        app:layout_constraintTop_toBottomOf="@+id/holidayName"
        tools:text="Lá Fhéile Bríde" />

    <TextView
        android:id="@+id/globalState"
        style="@style/MainTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="14sp"
        android:background="@drawable/chip_shape"
        android:textColor="?colorOnTertiary"
        app:layout_constraintEnd_toStartOf="@+id/fixedState"
        app:layout_constraintTop_toBottomOf="@+id/holidayLocalName"
        tools:text="Global" />

    <TextView
        android:id="@+id/fixedState"
        style="@style/MainTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="14sp"
        android:background="@drawable/chip_shape"
        android:textColor="?colorOnTertiary"
        app:layout_constraintEnd_toStartOf="@+id/launchYear"
        app:layout_constraintTop_toBottomOf="@+id/holidayLocalName"
        tools:text="Fixed" />

    <TextView
        android:id="@+id/launchYear"
        style="@style/MainTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="14sp"
        android:background="@drawable/chip_shape"
        android:textColor="?colorOnTertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/holidayLocalName"
        tools:text="2023" />

</androidx.constraintlayout.widget.ConstraintLayout>