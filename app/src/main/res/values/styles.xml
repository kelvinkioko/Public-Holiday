<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="HeadlineTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:fontFamily">@font/urbanist_extrabold</item>
    </style>

    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="TitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <!--This will be applied on any text described with 16sp, 24dp line height, main text color and Body1 appearance-->
    <style name="MainTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--This will be applied on any text described with 14sp, 20dp line height, sub text color and Body1 appearance-->
    <style name="SubItemTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DialogButtonAppearance" parent="Widget.Material3.Button" >
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextButtonAppearance" parent="Widget.Material3.Button.TextButton" >
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>